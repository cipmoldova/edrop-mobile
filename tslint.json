{
  "extends": [ "tslint-angular" ],
  "rules": {
    "directive-selector": [ true, "attribute", "ns", "camelCase" ],
    "component-selector": [ true, "element", "ns", "kebab-case" ],
    "quotemark": [ true, "double", "avoid-escape" ],
    "no-inferrable-types": false
  },
  "linterOptions": {
      "exclude": [
          "app/*.d.ts",
          "app/vendor*.ts"
      ]
  }
}
